@model List<UrunModel>
<div style="padding:75px 0 75px 0" class="bg-dark text-white d-flex flex-column align-items-center">
    <h1>Shop in Style</h1>
    <h4>System Status:@ViewBag.SystemStatus</h4>
    <h5 class="text-secondary">With this shop homepage template</h5>
</div>
<div class="d-flex flex-wrap justify-content-around">

    @foreach (var item in Model)
    {
        <div class="card mt-5 position-relative" style="width:450px">
            <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap" style="width:450px;height:300px">
            <div class="card-body d-flex align-items-center flex-column">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">
                    @for (int i = 0; i < item.Stars; i++)
                    {
                        <i class="fa-solid fa-star product-popularity"></i>
                    }
                </p>
                <p class="card-text text-secondary">$@item.Price</p>
                @if (item.Piece > 0)
                {
                    <a href="#" class="btn mt-3 border rounded">Add To Cart</a>
                }
                else
                {
                    <a href="#" class="btn mt-3 border rounded">View Options</a>
                }
            </div>
            @if (item.Piece > 0)
            {
                <div class="position-absolute bg-dark px-2 text-white rounded " style="top:20px;right:20px">Sale</div>
            }
        </div>
    }
</div>

