@model OnlineStoreApp_1.DataModel.UrunEntity
@{
    ViewData["Title"] = "Urunler";
}


<div class="d-flex justify-content-center">
    <form class="col-10">
        <div class="col-8">
            <div class="form-group">
                <label>Id</label>
                <input type="number" class="form-control" value="@Model.Id">
                <small class="form-text text-muted">Düzenlenmek istenenen ürün Id</small>
            </div>
            <div class="form-group">
                <label>Adi</label>
                <input type="text" class="form-control" value="@Model.Adi">
                <small class="form-text text-muted">Düzenlenmek istenenen ürünün Adı</small>
            </div>
            <div class="form-group">
                <label>Kategori</label>
                <input type="text" class="form-control" value="@Model.Kategori">
                <small class="form-text text-muted">Düzenlenmek istenenen ürünün Kategorisi</small>
            </div>
            <div class="form-group">
                <label>Fiyat</label>
                <input type="number" step="1" class="form-control" value="@Model.Fiyat">
                <small class="form-text text-muted">Düzenlenmek istenenen ürünün Fiyatı</small>
            </div>
            <div class="form-group">
                <label>Adet</label>
                <input type="number" step="1" class="form-control" value="@Model.Adet">
                <small class="form-text text-muted">Düzenlenmek istenenen ürünün Fiyatı</small>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </div>
    </form>
</div>